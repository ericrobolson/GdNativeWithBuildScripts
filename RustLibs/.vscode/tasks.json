{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "windows x86_64",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--target",
        "x86_64-pc-windows-msvc"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}/cube"
      },
      "group": "build"
    },    
      {
      "label": "windows i686",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--target",
        "i686-pc-windows-msvc"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}/cube"
      },
      "group": "build"
    },    
    {
      "label": "copy_to_godot",
      "type":"shell",
      "command": "copy",
      "args":[
        "source","target/x86_64-pc-windows-msvc/debug/cube.dll", "destination", "../x86_64-pc-windows-msvc/"
      ],
      "options": {
        "cwd": "${workspaceRoot}/cube"
      },
    },
    {
      "label": "build_all_targets",
      "dependsOn":["windows x86_64", "windows i686", "copy_to_godot" ]
    },
  ]
}